{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Foto van gebruiker{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% if picture %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ picture.publicURL }}" alt="User profile picture">
                        {% else %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ asset('img/no_picture.jpg') }}" alt="User profile picture">
                        {% endif %}
                        <br />
                        <p class="text-center">
                            {% if picture is not null %}
                                <a id="{{ picture.id }}" class="btn btn-sm btn-danger delete">
                                    <i class="fa fa-trash-o"></i> Verwijderen
                                </a>
                            {% else %}
                                <a class="btn btn-sm btn-success"
                                   href="{{ path('backend_employee_user_picture_create', {'id' : app.request.get('id')}) }}">
                                    <i class="fa fa-plus"></i> Toevoegen
                                </a>
                            {% endif %}
                        </p>
                        <p>Er kan maar 1 foto tegelijk aanwezig zijn, als u een nieuwe foto wil uploaden moet u eerst de
                            huidige verwijderen.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="confirmmodal" class="modal modal-danger">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span></button>
                    <h4 class="modal-title">Waarschuwing</h4>
                </div>
                <div class="modal-body">
                    <p>Weet u zeker dat u de foto wil verwijderen?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Nee</button>
                    <button id="approve" type="button" class="btn btn-outline">Ja</button>
                </div>
            </div>
        </div>
    </div>
    </div> <!-- end div row -->
    </div> <!-- end col-sm-12 -->
    </div> <!-- end box box-primary -->
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/views/EmployeeBundle/UserPicture/UserPictureConfirmDelete.js') }}"></script>
{% endblock %}