{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Profiel{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% if user.picture %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ user.picture.publicurl }}" alt="User profile picture">
                        {% else %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ asset('img/no_picture.jpg') }}" alt="User profile picture">
                        {% endif %}

                        <h3 class="profile-username text-center">{{ user.firstname }} {{ user.lastname }}</h3>

                        <p class="text-muted text-center">
                            {% for role in user.roles %}
                                {{ role|trans }},
                            {% endfor %}
                        </p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>BSN/Rijksnummer</b> <span class="pull-right">{{ user.citizenServiceNumber }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Adres</b> <span class="pull-right">{{ user.address }} {{ user.houseNumber }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Postcode</b> <span class="pull-right">{{ user.zipcode }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Land</b> <span class="pull-right">{{ user.country }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Telefoonnummer</b> <span class="pull-right">{{ user.phone }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Mobiel</b> <span class="pull-right">{{ user.mobilePhone }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Gebruikersnaam</b> <span class="pull-right">{{ user.username }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b> <span class="pull-right">{{ user.email }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Account is actief</b> <span class="pull-right">{{ outputBool(user.isActive) }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Start contract</b> <span class="pull-right">{{ user.startContract|date('d/m/Y') }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Einde contract</b> <span class="pull-right">{{ user.endContract|date('d/m/Y') }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Noodgeval contactpersoon</b> <span class="pull-right">{{ user.emergencyContact }}</span>
                            </li>
                            <li class="list-group-item">
                                <b>Noodgeval contact telefoonnummer</b> <span class="pull-right">{{ user.emergencyContactPhone }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <h2>Wachtwoord wijzigen</h2>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ outputFormButton('Aanpassen') }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}