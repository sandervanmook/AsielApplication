{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Overzicht dier{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-8">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne"
                               aria-expanded="true" aria-controls="collapseOne">
                                Algemeen
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel"
                         aria-labelledby="headingOne">
                        <div class="panel-body">
                            <table class="table table-condensed">
                                <tbody>
                                <tr>
                                    <td>Status</td>
                                    <td>{{ activestate.getclassname|trans }}</td>
                                </tr>
                                <tr>
                                    <td><p class="text-alert">Zichtbaar voor publiek</p></td>
                                    <td>{{ outputBool(animal.visiblePublic) }}</td>
                                </tr>
                                <tr>
                                    <td><p class="text-alert">Staat op facebook</p></td>
                                    <td>{{ outputBool(animal.facebookId) }}</td>
                                </tr>
                                <tr>
                                    <td>Naam</td>
                                    <td>{{ animal.name }}</td>
                                </tr>
                                <tr>
                                    <td>Ras</td>
                                    <td>{{ animal.race }}</td>
                                </tr>
                                <tr>
                                    <td>Locatie overdag</td>
                                    <td>{{ animal.dayLocation }}</td>
                                </tr>
                                <tr>
                                    <td>Locatie 's nachts</td>
                                    <td>{{ animal.nightLocation }}</td>
                                </tr>
                                <tr>
                                    <td>In asiel sinds</td>
                                    <td>{{ animal.admissionDate|date('d-m-Y') }}</td>
                                </tr>
                                <tr>
                                    <td>Chipnummer</td>
                                    <td>{{ animal.chipnumber }}</td>
                                </tr>
                                <tr>
                                    <td>Gechipped bij binnenkomst</td>
                                    <td>{{ outputBool(animal.notChipped) }}</td>
                                </tr>
                                <tr>
                                    <td>Paspoortnummer</td>
                                    <td>{{ animal.passportNumber }}</td>
                                </tr>
                                <tr>
                                    <td>Kleur</td>
                                    <td>{{ animal.colour }}</td>
                                </tr>
                                <tr>
                                    <td>Geboortedatum</td>
                                    <td>{{ animal.dayOfBirth|date('d-m-Y') }}</td>
                                </tr>
                                <tr>
                                    <td>Leeftijd</td>
                                    <td>{{ animal.getAge }} Jaar</td>
                                </tr>
                                <tr>
                                    <td>Geslacht</td>
                                    <td>{{ outputGender(animal.gender) }}</td>
                                </tr>
                                <tr>
                                    <td>Gesteriliseerd / Gecastereerd</td>
                                    <td>{{ outputBool(animal.sterilized) }}</td>
                                </tr>
                                <tr>
                                    <td>Zindelijk</td>
                                    <td>{{ outputBool(animal.toiletTrained) }}</td>
                                </tr>
                                <tr>
                                    <td>Buiten dier</td>
                                    <td>{{ animal.outsideAnimal }}</td>
                                </tr>
                                <tr>
                                    <td>Omschrijving</td>
                                    <td>{{ animal.description|raw }}</td>
                                </tr>
                                <tr>
                                    <td>Karakter eigenschappen</td>
                                    <td>{{ animal.characteristics|raw }}</td>
                                </tr>
                                <tr>
                                    <td>Medische problemen</td>
                                    <td>{{ animal.medicalproblems|raw }}</td>
                                </tr>
                                <tr>
                                    <td>Bekend met agressie</td>
                                    <td>{{ animal.knownAggression|raw }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion"
                               href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Specifieke gegevens
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            {% if animal.getClassName == 'Cat' %}
                                <table class="table table-condensed">
                                    <tbody>
                                    <tr>
                                        <td><i>Kan het dier met kleine honden overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleSmallDog|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan het dier met grote honden overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleLargeDog|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan samen met andere katten ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleCat|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan het met andere dieren overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleOtherAnimals|raw }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endif %}
                            {% if animal.getClassName == 'Dog' %}
                                <table class="table table-condensed">
                                    <tbody>
                                    <tr>
                                        <td>Type vacht</td>
                                        <td>{{ animal.furType }}</td>
                                    </tr>
                                    <tr>
                                        <td>Kruising</td>
                                        <td>{{ outputBool(animal.crossbred) }}</td>
                                    </tr>
                                    <tr>
                                        <td>Heeft beweging nodig</td>
                                        <td>{{ outputBool(animal.needsExercise) }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="table table-condensed">
                                    <tbody>
                                    <tr>
                                        <td><i>Kan het dier met kleine honden overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleSmallDog|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan het dier met grote honden overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleLargeDog|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan samen met katten ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleCat|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Kan het met andere dieren overweg ?</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.compatibleOtherAnimals|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td><i>Bekende commando's</i></td>
                                    </tr>
                                    <tr>
                                        <td>{{ animal.knownCommands|raw }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingThree">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion"
                               href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Klant
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel"
                         aria-labelledby="headingThree">
                        <div class="panel-body">
                            {% if activestate.getclassname == 'Adopted' %}
                                <p>Datum: {{ activestate.date|date('d/m/Y') }}</p>
                                <p><i>Geadopteerd door:</i></p>
                                <table class="table table-condensed">
                                    <tbody>
                                    <tr>
                                        <td>Naam</td>
                                        <td>{{ activestate.customer.name }}</td>
                                    </tr>
                                    <tr>
                                        <td>Adres</td>
                                        <td>{{ activestate.customer.address }} {{ activestate.customer.housenumber }}</td>
                                    </tr>
                                    <tr>
                                        <td>Postcode</td>
                                        <td>{{ activestate.customer.zipcode }}</td>
                                    </tr>
                                    <tr>
                                        <td>Gemeente</td>
                                        <td>{{ activestate.customer.municipality }}</td>
                                    </tr>
                                    <tr>
                                        <td>Land</td>
                                        <td>{{ activestate.customer.country }}</td>
                                    </tr>
                                    <tr>
                                        <td>Telefoonnummer</td>
                                        <td>{{ activestate.customer.phone }}</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>{{ activestate.customer.email }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% elseif activestate.getclassname == 'Abandoned' %}
                                <p>Datum: {{ activestate.date|date('d/m/Y') }}</p>
                                <p><i>Afgestaan door:</i></p>
                                <table class="table table-condensed">
                                    <tbody>
                                    <tr>
                                        <td>Naam</td>
                                        <td>{{ activestate.abandonedby.name }}</td>
                                    </tr>
                                    <tr>
                                        <td>Adres</td>
                                        <td>{{ activestate.abandonedby.address }} {{ activestate.abandonedby.housenumber }}</td>
                                    </tr>
                                    <tr>
                                        <td>Postcode</td>
                                        <td>{{ activestate.abandonedby.zipcode }}</td>
                                    </tr>
                                    <tr>
                                        <td>Gemeente</td>
                                        <td>{{ activestate.abandonedby.municipality }}</td>
                                    </tr>
                                    <tr>
                                        <td>Land</td>
                                        <td>{{ activestate.abandonedby.country }}</td>
                                    </tr>
                                    <tr>
                                        <td>Telefoonnummer</td>
                                        <td>{{ activestate.abandonedby.phone }}</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>{{ activestate.abandonedby.email }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% elseif activestate.getclassname == 'Found' %}
                                {% if activestate.foundBy is not empty %}
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <td>Datum</td>
                                            <td>{{ activestate.date|date('d/m/Y') }}</td>
                                        </tr>
                                        <tr>
                                            <td>Gevonden type</td>
                                            <td>{{ activestate.foundtype }}</td>
                                        </tr>
                                        <tr>
                                            <td>Locatie</td>
                                            <td>{{ activestate.foundatlocation|raw }}</td>
                                        </tr>
                                        <tr>
                                            <td>Staat van het dier</td>
                                            <td>{{ activestate.animalstate|raw }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <p>Gevonden door</p>
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <td>Naam</td>
                                            <td>{{ activestate.foundBy.name }}</td>
                                        </tr>
                                        <tr>
                                            <td>Adres</td>
                                            <td>{{ activestate.foundBy.address }} {{ activestate.foundBy.housenumber }}</td>
                                        </tr>
                                        <tr>
                                            <td>Postcode</td>
                                            <td>{{ activestate.foundBy.zipcode }}</td>
                                        </tr>
                                        <tr>
                                            <td>Gemeente</td>
                                            <td>{{ activestate.foundBy.municipality }}</td>
                                        </tr>
                                        <tr>
                                            <td>Land</td>
                                            <td>{{ activestate.foundBy.country }}</td>
                                        </tr>
                                        <tr>
                                            <td>Telefoonnummer</td>
                                            <td>{{ activestate.foundBy.phone }}</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td>{{ activestate.foundBy.email }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div> <!-- end div row -->
    </div> <!-- end col-sm-12 -->
    </div> <!-- end box box-primary -->
{% endblock %}