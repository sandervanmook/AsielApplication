{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Facebook{% endblock %}
{% block pagesubtitle %}Plaats een post{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% if facebooklink is not null %}
                    <p class="text-danger">Let op, dit dier staat al op <a href="{{ facebooklink }}" target="_blank">facebook</a></p>
                {% endif %}

                <form class="form-group" method="post" action="{{ path('backend_animal_facebook_post', {'id' : app.request.attributes.get('id')}) }}">

                    <p>Welke foto moet er worden gepost ?</p>
                    <div>
                        {% for picture in pictures %}
                            <div>
                                <img id="{{ picture.id }}" class="Dog" src="{{ picture.getpublicurl }}" height="100">
                                <br />
                                <input value="{{ picture.id }}" type="radio" name="picture">
                            </div>
                        {% endfor %}
                    </div>
                    <br />
                    <div>
                        <div class="form-group">
                            <label for="message">Het bericht bij de post *</label>
                            <textarea id="message" name="message" placeholder="Vul het bericht in"></textarea>
                        </div>
                        <br />
                        <input class="btn btn-success" type="submit" name="submit" value="Plaatsen">
                        <br />
                        <p>* Aan het einde van de post zal een link naar de website worden geplaatst.
                            <span class="text-danger">Als het dier niet zichtbaar is voor publiek krijgt de klant een fout te zien.</span></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}