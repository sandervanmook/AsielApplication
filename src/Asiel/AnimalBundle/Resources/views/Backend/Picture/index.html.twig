{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}{% endblock %}
{% block body %}
    <div class="ui tab segment active">
        <div class="ui sixteen column grid container">
            <div class="sixteen wide column">
                <div class="ui two column very relaxed grid">
                    <div class="ten wide column">
                        <table class="ui table compact collapsing striped">
                            <thead>
                            <tr>
                                <th>Geupload op</th>
                                <th>Naam bestand</th>
                                <th>Voorbeeld</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for picture in pictures %}
                                <tr>
                                    <td>{{ picture.updatedat|date('d-m-Y') }}</td>
                                    <td>{{ picture.picturename }}</td>
                                    <td><img src="{{ picture.getPublicURL }}" height="40"></td>
                                    <td>
                                        <div id="{{ picture.id }}" class="ui mini negative labeled icon button delete">
                                            <i class="remove icon"></i> Verwijderen
                                        </div>
                                    </td>
                                    <td>
                                        <div id="{{ picture.id }}" class="ui mini info labeled icon button view">
                                            <i class="folder open icon"></i> Bekijken
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>
                                    <a href="{{ path('backend_animal_picture_create', {'id' : app.request.attributes.get('id')}) }}">
                                        <div class="ui tiny positive labeled icon button">
                                            <i class="add square icon"></i> Foto toevoegen
                                        </div>
                                    </a>
                                </th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="six wide column">
                        <div id="result"></div>
                    </div>
                </div>
                <div id="confirmmodal" class="ui basic modal">
                    <div class="ui icon header">
                        <i class="archive icon"></i>
                        Foto verwijderen
                    </div>
                    <div class="content">
                        <p>Weet u zeker dat u de foto wil verwijderen?</p>
                    </div>
                    <div class="actions">
                        <div class="ui red basic cancel inverted button">
                            <i class="remove icon"></i>
                        </div>
                        <div id="approve" class="ui green ok inverted button">
                            <i class="checkmark icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/views/AnimalBundle/Picture/PictureConfirmDelete.js') }}"></script>
    <script src="{{ asset('js/views/AnimalBundle/Picture/PictureShow.js') }}"></script>
{% endblock %}