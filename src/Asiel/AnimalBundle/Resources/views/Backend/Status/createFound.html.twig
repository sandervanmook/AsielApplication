{% extends '@Backend/Base/Base.html.twig' %}
{% block pagesubtitle %}Status aanmaken: Gevonden{% endblock %}
{% block body %}
    <div class="ui tab segment active">
        <div class="ui twelve column grid container">
            <div class="six wide column">
                {{ form_start(form) }}
                {{ form_row(form.date) }}
                {{ form_row(form.foundType) }}
                {{ form_row(form.foundMunicipality) }}
                {{ form_row(form.foundBy) }}
                {{ form_row(form.search) }}
                <div id="result"></div>
                {{ form_row(form.foundAtLocation) }}
                {{ form_row(form.animalState) }}
                {{ form_row(form.needsChipping) }}
                {{ outputFormButton('Aanmaken') }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/views/AnimalBundle/Status/searchCustomerFound.js') }}"></script>
{% endblock %}