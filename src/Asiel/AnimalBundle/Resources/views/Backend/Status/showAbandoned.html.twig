{% if status.archived %}
<div class="panel panel-info">
    {% else %}
    <div class="panel panel-success">
        {% endif %}
        <div class="panel-heading">Status {{ status.id }}</div>
        <div class="panel-body">
            <p>Datum: {{ status.date|date('d-m-Y') }}</p>
            <p>Type status:  {{ status.getclassname|trans }}</p>
            <p>Prijs van afstand doen: {{ status.price }}</p>
            <p>Afgestaan door: <a href="{{ path('backend_customer_edit', { 'id' : status.abandonedby.id }) }}">{{ status.abandonedby.firstname }} {{ status.abandonedby.lastname }}</a></p>
            <p>Moet door ons gechipt worden: {{ outputBool(status.needsChipping) }}</p>
            <p>Moet door ons gevaccineerd worden {{ outputBool(status.needsVaccines) }}</p>
            <p>Moet door ons gecastreerd / gesteraliseerd worden {{ outputBool(status.needsSterilization) }}</p>
            <p>Moet nog een paspoort krijgen: {{ outputBool(status.needsPassport) }}</p>
        </div>
    </div>
