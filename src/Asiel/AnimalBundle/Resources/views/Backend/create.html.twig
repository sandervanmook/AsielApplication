{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Dier aanmelden{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Controleer eerst het chipnummer</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label" for="chipnumbercheck">Chipnummer van het dier</label>
                            <input type="text" id="chipnumbercheck" placeholder="Vul het 15 cijferige chipnummer van het dier in." maxlength="15" class="form-control">
                        </div>
                    </div>
                </div>
                <div id="chipresult"></div>
                <div id="choices">
                    <br />
                    <a href="{{ path('asiel_animal_register', {'type' : 'Cat'}) }}">Kat aanmelden</a> |
                    <a href="{{ path('asiel_animal_register', {'type' : 'Dog'}) }}">Hond aanmelden</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10">
                <div id="searchexternally">
                    <br />
                    <p>Of zoek extern: </p>
                    <ul>
                        <li><img id="bhc" src="{{ asset('img/logo-bhc.png') }}" height="50" alt="backhomeclub.nl"></li>
                    </ul>
                    <p>Test chipnummer voor backhomeclub.nl : 528274000126497</p>
                </div>
                <div id="externalresult"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/views/Animal/AnimalCreate.js') }}"></script>
{% endblock %}

