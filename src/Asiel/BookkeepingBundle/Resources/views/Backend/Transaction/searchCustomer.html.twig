{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Transactie aanmaken - Zoek klant{% endblock %}
{% block body %}
    <div class="ui sixteen column grid container">
        <div class="eight wide column">
            <h3 class="ui header">Filters</h3>
            <table class="ui table very basic">
                <thead>
                <tr>
                    <th class="four wide">Achternaam</th>
                    <th class="four wide">BSN/Rijksnummer</th>
                    <th class="four wide">Gemeente</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ form_row(form.lastname) }}</td>
                    <td>{{ form_row(form.citizenservicenumber) }}</td>
                    <td>{{ form_row(form.municipality) }}</td>

                </tr>
                </tbody>
            </table>
        </div>
        <div class="sixteen wide column">
            {% if actioncustomerid != 0 %}<div class="ui compact segment">
                <p>Of <a href="{{ path('backend_bookkeeping_transaction_create', {'customerid' : actioncustomerid}) }}">gebruik</a>
                    de klant die aan de actie verbonden zit.</p>
            </div>
            {% endif %}
            <div class="ui divider horizontal"></div>
            <div id="searchresult"></div>
            <div class="ui divider horizontal"></div>
            <div class="ui divider horizontal"></div>
        </div>
    </div>
    {% set animalid = app.request.get('animalid') %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>var requestby = 'bookkeepingbundle_transaction';</script>
    <script src="{{ asset('js/views/CustomerBundle/Search.js') }}"></script>
{% endblock %}

