{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Actie aanmaken{% endblock %}
{% block pagesubtitle %}Zoek dier{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Filters</h3>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Type</th>
                            <th>Geslacht</th>
                            <th>Leeftijd</th>
                            <th>Status</th>
                            <th>Gesteriliseerd / Gecastereerd</th>
                            <th>Chipnummer</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ form_row(form.type) }}</td>
                            <td>{{ form_row(form.gender) }}</td>
                            <td>{{ form_row(form.agestart) }}
                                {{ form_row(form.ageend) }}
                            </td>
                            <td>{{ form_row(form.status) }}</td>
                            <td>{{ form_row(form.sterilized) }}</td>
                            <td>{{ form_row(form.chipnumber) }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="callout callout-info">
                <p><i class="fa fa-info-circle"></i> Staat het dier er niet bij? Meld het dan eerst <a href="{{ path('backend_animal_create') }}">aan</a>
            </div>
        </div>
    </div>
    <div id="searchresult"></div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>var requestby = 'bookkeepingbundle'</script>
    <script src="{{ asset('js/views/AnimalBundle/Animal/Search.js') }}"></script>
{% endblock %}