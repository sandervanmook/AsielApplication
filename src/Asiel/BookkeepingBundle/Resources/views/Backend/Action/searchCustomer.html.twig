{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Actie aanmaken - Zoek klant{% endblock %}
{% block body %}
    <div class="ui sixteen column grid container">
        <div class="ui segment collapsed">
            <i class="info icon"></i>In het geval van een gevonden status gaat het om de persoon die het dier gevonden
            heeft.
        </div>
        <div class="eight wide column">
            <h3 class="ui header">Filters</h3>
            <table class="ui table very basic">
                <thead>
                <tr>
                    <th class="four wide">Achternaam</th>
                    <th class="four wide">BSN/Rijksnummer</th>
                    <th class="four wide">Gemeente</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ form_row(form.lastname) }}</td>
                    <td>{{ form_row(form.citizenservicenumber) }}</td>
                    <td>{{ form_row(form.municipality) }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="sixteen wide column">
            <div class="ui segment collapsed">
                <p>Als de klant niet bekend is klik dan <a
                            href="{{ path('backend_bookkeeping_action_select', {'customerid' : 'unknown'}) }}">hier</a>
                    of maak een <a href="{{ path('backend_customer_create') }}">nieuwe</a> aan.</p>
            </div>
            <div class="ui divider horizontal"></div>
            <div id="searchresult"></div>
            <div class="ui divider horizontal"></div>
            <div class="ui divider horizontal"></div>
        </div>
    </div>
    {% set animalid = app.request.get('animalid') %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>var requestby = 'bookkeepingbundle_action';</script>
    <script src="{{ asset('js/views/CustomerBundle/Search.js') }}"></script>
{% endblock %}

