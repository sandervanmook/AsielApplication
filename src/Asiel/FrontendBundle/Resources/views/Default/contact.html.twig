{% extends 'FrontendBundle:Base:Base.html.twig' %}
{% block pagetitle %}{% endblock %}
{% block body %}
    <div class="ui text container">
    <h2 class="ui header">Contact</h2>
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="ui success message">
            <div class="header">Bedankt!</div>
            <p>{{ flash_message }}</p>
        </div>
    {% endfor %}
    <div>
        <p>U kunt het formulier hieronder gebruiken om contact met ons op te nemen.</p>
        <div class="ui divider horizontal"></div>
    </div>

    <div class="ui one column very relaxed grid">
        <div class="six wide column">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ outputFormButton('Verstuur') }}
            {{ form_end(form) }}
        </div>
    </div>

    <div class="ui divider horizontal"></div>
    <div class="ui divider horizontal"></div>
    <div class="ui divider horizontal"></div>

    <div class="ui two column very relaxed grid">
        <div class="column">
            <table class="ui very basic table">
                <tbody>
                <tr>
                    <td>{{ info.name }}</td>
                </tr>
                <tr>
                    <td>{{ info.address }} {{ info.housenumber }}</td>
                </tr>
                <tr>
                    <td>{{ info.zipcode }} {{ info.municipality }}</td>
                </tr>
                <tr>
                    <td><a href="mailto:{{ info.email }}">{{ info.email }}</a></td>
                </tr>
                <tr>
                    <td>{{ info.phone }}</td>
                </tr>
                <tr>
                    <td>Ondernemingsnummer {{ info.cocNumber }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        {#<div class="column">#}
            {#<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2504.042197209429!2d5.763615316150487!3d51.126129679574184!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c0cc1c05ef6c5f%3A0x1ee2fce2b62ee0eb!2sEygenweg+1%2C+3640+Kinrooi%2C+Belgi%C3%AB!5e0!3m2!1snl!2snl!4v1481391944945"#}
                    {#width="350" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>#}
        {#</div>#}
    </div>
    <div class="ui divider horizontal"></div>
    <div class="ui divider horizontal"></div>
{% endblock %}