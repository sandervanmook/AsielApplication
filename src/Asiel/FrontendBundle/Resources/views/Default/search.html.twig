{% extends 'FrontendBundle:Base:Base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('datatables.min.css') }}"/>
{% endblock %}
{% block pagetitle %}Zoek een dier{% endblock %}
{% block body %}
    <h2 class="ui header">Filter</h2>
    <div class="ui tiny form">
        <div class="fields">
            <div class="two wide field">
                <label for="min">Min leeftijd</label>
                <input type="text" id="min" name="min">
            </div>
            <div class="two wide field">
                <label for="max">Max leeftijd</label>
                <input type="text" id="max" name="max">
            </div>
        </div>
    </div>
    <br />
    <div>
        <table id="result_table">
            <thead>
                <tr>
                    <td></td>
                    <td>Type</td>
                    <td>Naam</td>
                    <td>Ras</td>
                    <td>Geslacht</td>
                    <td>Leeftijd</td>
                    <td>Kleur</td>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                {% for animal in result %}
                <tr id="{{ animal.id }}" class="{{ animal.getClassName }}">
                    <td>{% if animal.pictures is not empty %}
                            {% for picture in animal.pictures|slice(0,1) %}
                                <img src="{{ picture.publicurl }}" height="30" alt="animal_picture">
                            {% endfor %}
                        {% else %}
                            <img src="{{ asset('img/no_picture.jpg') }}" height="20" alt="no_animal_picture">
                        {% endif %}
                    </td>
                    <td>{{ animal.getClassName|trans }}</td>
                    <td>{{ animal.name }}</td>
                    <td>{{ animal.race }}</td>
                    <td>{{ animal.gender|trans }}</td>
                    <td>{{ animal.age }}</td>
                    <td>{{ animal.colour }}</td>
                    {% for state in animal.status %}
                        {% if state.archived == false %}
                    <td>{{ state.getclassname|trans }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="container">
        <div class="row">
            <div id="result"></div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('datatables.min.js') }}"></script>
    <script src="{{ asset('js/views/FrontendBundle/Default/FrontendSearch.js') }}"></script>
    <script src="{{ asset('js/views/FrontendBundle/Cat/PublicShowCat.js') }}"></script>
    <script src="{{ asset('js/views/FrontendBundle/Dog/PublicShowDog.js') }}"></script>
{% endblock %}

