{% extends 'FrontendBundle:Base:Base.html.twig' %}
{% block pagetitle %}{% endblock %}
{% block body %}
    <div class="ui text container">
        <div class="ten wide column">
            <h2 class="ui header">Inloggen</h2>
            {% if error %}
                <div class="ui error message">
                    <div class="header">Er is een fout opgetreden</div>
                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>
            {% endif %}
            <form class="ui form" action="{{ path('login') }}" method="post">
                <div class="two fields">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="field">
                        <label for="username">Gebruikersnaam</label>
                        <input id="username" value="{{ last_username }}" type="text" name="_username"
                               placeholder="Emailadres / Gebruikersnaam" required autofocus>
                    </div>
                    <div class="field">
                        <label for="password">Wachtwoord</label>
                        <input type="password" id="password" name="_password" placeholder="Wachtwoord" required>
                    </div>
                </div>
                <button class="ui positive button" type="submit">Inloggen</button>
            </form>
            <span>Gebruikersnaam en wachtwoord <b>"admin"</b></span>
        </div>
    </div>
{% endblock %}