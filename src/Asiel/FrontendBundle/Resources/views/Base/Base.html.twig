    <body class="Site">
        <!-- Header -->
        <div class="ui main text container center">
            <img src="{{ asset('img/frontpage_logo.jpg') }}" alt="logo" height="150">
        </div>
        <!-- /Header -->

        <!-- Menu -->
        <div class="ui borderless main menu">
            <div class="ui text container">
                <a class="header item" href="{{ path('frontend_index') }}"><img src="{{ asset('img/public_logo.png') }}" alt="logo"></a>
                <a class="item" href="{{ path('frontend_cat_index', {'option' : 'both'}) }}">Katten<div class="floating ui teal label">{{ render(controller('FrontendBundle:Cat:catCountPublic', {'option': 'both'} )) }}</div></a>
                <a class="item" href="{{ path('frontend_dog_index', {'option' : 'both'}) }}">Honden<div class="floating ui teal label">{{ render(controller('FrontendBundle:Dog:dogCountPublic', {'option': 'both'} )) }}</div></a>
                <a class="item" href="{{ path('frontend_about') }}">Over ons</a>
                <a class="item" href="{{ path('frontend_contact') }}">Contact</a>
                <a class="item right" href="{{ path('backend_default_index') }}">Inloggen</a>
            </div>
        </div>
        <!-- /Menu -->

        <!-- Page -->
        <div class="ui text container Site-content">
            <h2 class="ui header">{% block pagetitle %}{% endblock %}</h2>
            {% block pagesubtitle %}{% endblock %}
            {% block flash %}{% endblock %}
            {% block body %}{% endblock %}
        </div>
        <!-- /Page -->

        <!-- Footer -->
        <div class="ui bottom fixed inverted vertical footer segment">
            <div class="ui center aligned container">
                <div class="ui stackable inverted divided grid">
                    <div class="three wide column">
