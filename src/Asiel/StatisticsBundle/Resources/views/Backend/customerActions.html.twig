{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Statistieken - Klanten - Handelingen{% endblock %}
{% block body %}
    <div class="ui sixteen column grid container">
        <div class="twelve wide column">
            <h3 class="ui header">Zoek een klant</h3>
            <table class="ui table very basic">
                <thead>
                <tr>
                    <th class="four wide">Achternaam</th>
                    <th class="four wide">BSN/Rijksnummer</th>
                    <th class="four wide">Gemeente</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ form_row(form.lastname) }}</td>
                    <td>{{ form_row(form.citizenservicenumber) }}</td>
                    <td>{{ form_row(form.municipality) }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="sixteen wide column">
            <div class="ui divider horizontal"></div>
            <div id="searchresult"></div>
            <div class="ui divider horizontal"></div>
            <div class="ui divider horizontal"></div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>var requestby = 'statisticsbundle';</script>
    <script src="{{ asset('js/views/CustomerBundle/Search.js') }}"></script>
{% endblock %}