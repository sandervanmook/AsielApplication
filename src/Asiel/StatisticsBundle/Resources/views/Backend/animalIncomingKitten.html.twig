{% extends '@Backend/Base/Base.html.twig' %}
{% block pagetitle %}Statistieken{% endblock %}
{% block pagesubtitle %}Dieren  binnengekomen kittens{% endblock %}
{% block body %}
    <div class="row">
    <div class="col-sm-3">
        <div class="box box-primary box-padding-small">
            <div class="box-header with-border">
                <h3 class="box-title">Filters</h3>
            </div>
            {{ form_start(form) }}
            <div class="table-responsive">
                <table class="table table-condensed">
                    <tbody>
                    <tr>
                        <td>Van</td>
                    </tr>
                    <tr>
                        <td>{{ form_row(form.datestart) }}</td>
                    </tr>
                    <tr>
                        <td>Tot</td>
                    </tr>
                    <tr>
                        <td>{{ form_row(form.dateend) }}</td>
                    </tr>
                    <tr>
                        <td>{{ outputFormButton('Zoeken') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            {{ form_end(form) }}
            <p>Data zal worden opgehaald d.m.v. de registratie datum te vergelijken met de geboortedatum.</p>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Resultaten</h3>
            </div>
            <div class="box-body">
                {% if result is defined %}
                    <p>Periode: {{ datestart }} t/m {{ dateend }}</p>
                    <p>Totaal aantal binnengekomen kittens deze periode: <b>{{ result }}</b></p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}